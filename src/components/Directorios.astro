

---
interface Props {
	title: string;
	body: string;
    href:string;
	
}
const {  title, body,href } = Astro.props;

---
<section>
<div>
    <a href={href}>{title}<span>&rarr;</span></a>
    <p>{body}</p>

</div>
</section>
<style>

div{
 
    width: 90%;
    height: 100px;
    border-radius: 5px;
    background-color: rgb(45, 45, 45);
    color:aliceblue;
    padding: 10px;
    text-align: center;
    margin-top: 20px;
    font-family: 'Courier New', Courier, monospace;
    margin-bottom: 30px;


}
section{
display: flex;
align-items: center;
justify-content: center;
}
a{
    text-decoration:none;
    font-size: 20px;
  
    color:aliceblue;

    
}
p{
    margin-top: 20px;
}


</style>